<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateEvent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="16dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="48dp"
                        android:src="@drawable/menu"
                        app:shapeAppearanceOverlay="@style/roundedImageView" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Create New Event"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Level 3"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="#DB3D3D"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/notification" />
                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="720dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="720dp"
                    android:orientation="vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:cardBackgroundColor="#B4D6F2"
                        app:cardCornerRadius="0dp">

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="50dp"
                            android:paddingStart="20dp"
                            android:paddingTop="10dp"
                            android:text="Events Details"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:textStyle="bold">

                        </TextView>

                    </com.google.android.material.card.MaterialCardView>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp">

                    </Space>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:paddingStart="10dp"
                            android:paddingTop="10dp"
                            android:text="Event Title"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:id="@+id/eventTitle"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/event_box"
                            android:hint="Give your event a clear, attention-grabbing title"
                            android:paddingStart="8dp"
                            android:textColor="@color/black"
                            android:textColorHint="#979797"
                            android:textSize="15dp">

                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">

                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="30dp"
                            android:paddingStart="10dp"
                            android:paddingTop="10dp"
                            android:text="Event Description "
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:id="@+id/eventDesc"
                            android:layout_width="match_parent"
                            android:paddingEnd="5dp"
                            android:layout_height="90dp"
                            android:background="@drawable/event_box"
                            android:gravity="top|start"
                            android:hint="Describe what your event is about, what attendees can expect, and why they should join"
                            android:paddingStart="8dp"
                            android:paddingTop="10dp"
                            android:textColor="@color/black"
                            android:textColorHint="#979797"
                            android:textSize="15dp">

                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="175dp"
                                android:layout_height="30dp"
                                android:paddingStart="10dp"
                                android:paddingTop="10dp"
                                android:text="Event Date"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:textStyle="bold">

                            </TextView>

                            <TextView

                                android:layout_width="175dp"
                                android:layout_height="30dp"
                                android:paddingStart="10dp"
                                android:paddingTop="10dp"
                                android:text="Event Time"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:textStyle="bold">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/eventDate"
                                android:layout_width="160dp"
                                android:layout_height="50dp"
                                android:background="@drawable/event_box"
                                android:hint="dd-mm-yyyy"
                                android:paddingStart="8dp"
                                android:textColor="@color/black"
                                android:textColorHint="#979797"
                                android:textSize="15dp"
                                android:focusable="false"
                                android:clickable="true"
                                android:inputType="none">

                            </EditText>

                            <Space
                                android:layout_width="20dp"
                                android:layout_height="10dp">

                            </Space>

                            <EditText
                                android:id="@+id/eventTime"
                                android:layout_width="160dp"
                                android:layout_height="50dp"
                                android:background="@drawable/event_box"
                                android:hint="--:--"
                                android:paddingStart="8dp"
                                android:textColor="@color/black"
                                android:textColorHint="#979797"
                                android:textSize="15dp"
                                android:focusable="false"
                                android:clickable="true"
                                android:inputType="none">

                            </EditText>

                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">

                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="30dp"
                            android:paddingStart="10dp"
                            android:paddingTop="10dp"
                            android:text="Event Location"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:id="@+id/eventLoc"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/event_box"
                            android:hint="Enter the physical address"
                            android:paddingStart="8dp"
                            android:textColor="@color/black"
                            android:textColorHint="#979797"
                            android:textSize="15dp">

                        </EditText>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">

                        <LinearLayout
                            android:layout_width="352dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="175dp"
                                android:layout_height="30dp"
                                android:paddingStart="10dp"
                                android:paddingTop="10dp"
                                android:text="Event Category"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:textStyle="bold">

                            </TextView>

                            <TextView

                                android:layout_width="175dp"
                                android:layout_height="30dp"
                                android:paddingStart="10dp"
                                android:paddingTop="10dp"
                                android:text="Event Type"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:textStyle="bold">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingEnd="10dp">


                            <Spinner
                                android:id="@+id/eventCat"
                                android:background="@drawable/event_box"
                                android:layout_width="170dp"
                                android:paddingStart="5dp"
                                android:layout_height="match_parent" />

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/eventSwitch"
                                android:layout_width="60dp"
                                android:layout_height="50dp">

                            </androidx.appcompat.widget.SwitchCompat>

                            <TextView
                                android:id="@+id/eventTypeDescription"
                                android:paddingTop="14dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:text="This is an offline event"
                                android:textColor="#B4D6F2"
                                android:textSize="11dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginEnd="10dp" />

                        </LinearLayout>



                    </LinearLayout>

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="10dp">

                    </Space>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/imageUpload"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardBackgroundColor="@color/white"
                            android:background="@drawable/event_box">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingStart="60dp"
                                android:paddingTop="30dp"
                                android:layout_gravity="center_horizontal|center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/dragDropText"
                                    android:layout_width="239dp"
                                    android:layout_height="40dp"
                                    android:text="Drag and Drop an image or browse"
                                    android:textAlignment="center"
                                    android:textColor="#979797"
                                    android:textSize="14dp"
                                    android:textStyle="bold">

                                </TextView>

                                <TextView
                                    android:id="@+id/recommendedSizeText"
                                    android:layout_width="238dp"
                                    android:layout_height="40dp"
                                    android:textColor="#979797"
                                    android:text="Recommended size: 1200x630px, max 5MB"
                                    android:textAlignment="center"
                                    android:textSize="11dp">

                                </TextView>


                                <android.widget.Button
                                    android:id="@+id/selectImageButton"
                                    android:layout_width="238dp"
                                    android:layout_height="40dp"
                                    android:text="Select Image"
                                    android:background="@drawable/event_box">

                                </android.widget.Button>
                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>


                    </LinearLayout>


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>



        </LinearLayout>


    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/next_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>